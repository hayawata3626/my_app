<% @post.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>

<div class="postNew">
  <new-component :post="post" :authenticationToken="authenticationToken"></new-component>
</div>

<%= javascript_include_tag "/javascripts/viewmodel/posts/new" %>

<script>
new PostNew({
  el: '.postNew',
  data:{
    post: <%= raw @post.to_json %>,
    authenticationToken: '<%= form_authenticity_token %>'
  }
})
</script>